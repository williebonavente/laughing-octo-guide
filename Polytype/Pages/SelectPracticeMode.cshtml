@page "/selectpracticemode"

<link rel="stylesheet" href="~/css/SelectPracticeMode.css" />

<div class="practice-mode-container">
    <div class="profile-sidebar">
        <div class="profile-card">
            @*Todo App the `+` button ontop of the avatar for  customizing profile picture *@
            <img src="/imgs/user_profile.png" class="profile-avatar" alt="User Avatar" />
            <div class="profile-welcome">
                Welcome, <span class="profile-name">Vanness!</span>
            </div>
            <button class="sidebar-btn sidebar-btn-black" onclick="goToDashboard()">Typing Dashboard Details</button>
            <button class="sidebar-btn sidebar-btn-black" onclick="goToPastSessions()">View Past Sessions</button>
            <button class="sidebar-btn start" onclick="goToPractice()">Start Practice</button>
        <button class="logout-btn" onclick="logout()">Log Out</button>
        </div>
    </div>
    <div class="practice-main">
        <h2 class="practice-title">Select Practice Mode</h2>
        <div class="practice-cards">
            <div class="practice-card">
                <img src="/imgs/time_based.png" alt="Time-Based" class="practice-img" />
                <h3>Time-Based</h3>
                <p>
                    Race against the clock and improve your typing speed under pressure. Choose a time limit,file type as much as you can, and track your WPM and accuracy in real-time.
                </p>
                <button class="practice-btn" onclick="goToPractice('time')">Start Practice</button>
            </div>
            <div class="practice-card">
                <img src="/imgs/word_based.png" alt="Word-Count-Based" class="practice-img" />
                <h3>Word-Count-Based</h3>
                <p>
                    Focus on precision and pacing by typing a set number of words. Great for building consistency and mastering flow without time pressure.
                </p>
                <button class="practice-btn" onclick="goToPractice('words')">Start Practice</button>
            </div>
            <div class="practice-card">
                <img src="/imgs/character_based.png" alt="Character-Based" class="practice-img" />
                <h3>Character-Based</h3>
                <p>
                    Sharpen your attention to detail with exercises based on specific character limits. Perfect for improving accuracy, rhythm, and control over short bursts of text.
                </p>
                <button class="practice-btn" onclick="goToPractice('character')">Start Practice</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function goToDashboard() {
            window.location.href = '/dashboard';
        }
        function goToPastSessions() {
            window.location.href = '/sessions';
        }
        function goToPractice(mode) {
            if (mode == 'time') {
                window.location.href = '/Practices/TimeBased';
            } else if (mode === 'words') {
                window.location.href = '/Practices/WordBased'; 
            } else if (mode === 'character') {
                window.location.href = '/Practices/CharacterBased';
            } 
        }
        function logout() {
            window.location.href = '/login';
        }
    </script>
}
